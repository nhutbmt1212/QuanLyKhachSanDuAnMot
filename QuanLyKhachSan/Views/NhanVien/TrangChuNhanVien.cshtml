                            <label>Số điện thoại</label>
                            <input class="form-control" name="sodienthoai" id="inputFieldSDT" maxlength="10" />
                            <span id="errorSDT" style="color: red;"></span>
                        </div>
                        <div class="form-group">
                            <label>CCCD</label>
                            <input class="form-control" name="cccd" id="inputFieldCCCD" maxlength="12" />
                            <span id="errorCCCD" style="color: red;"></span>
                        </div>
                        <div class="form-group">
                            <label>Giới tính</label>
                            <select class="form-control" name="gioitinh">
                                <option value="nam">
                                    Nam
                                </option>
                                <option value="Nữ">
                                    Nữ
                                </option>
                            </select>

                        </div>
                        <div class="form-group">
                            <label>Chức vụ</label>
                            <select class="form-control" name="chucvu">
                                <option value="Nhân viên">
                                    Nhân viên
                                </option>
                                <option value="Quản lý">
                                    Quản lý
                                </option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Mật khẩu</label>
                            <input class="form-control" name="matkhau" id="inputFieldMK" maxlength="30" />
                            <span id="errorMK" style="color: red;"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Ngày sinh</label>
                            <input class="form-control" type="date" name="ngaysinh" id="inputFieldNgaySinh" />
                            <span id="errorNgaySinh" style="color: red;"></span>
                        </div>
                        @* <div class="form-group">
                    <label>Ngày đăng ký</label>
                    <input class="form-control" type="date" name="ngaydangky" />
                    </div> *@
                        <div class="form-group">
                            <label>Ngày vào làm</label>
                            <input class="form-control" type="date" name="ngayvaolam" id="inputFieldNgayVaoLam" />
                            <span id="errorNgayVaoLam" style="color: red;"></span>
                        </div>


                        <div class="form-group">

                            <label for="formFile" class="form-label">Ảnh nhân viên</label>
                            <input type="file" id="formFile" name="anhnhanvien" id="inputFieldAnh" onchange="previewImage()"> <br/>
                            <span id="errorAnh" style="color: red;"></span>
                            <img src=""  id="preview">
                        </div>
                    </div>
                </div>
                @* --- *@
                <div class="clearfix">
                    <button type="button" class="btn float-right m-2 w-25  cancel " onclick="closeForm()">Đóng</button>
                    <button class="btn float-right m-2 w-25 " style="min-width:200px" asp-action="ThemNhanVien" asp-controller="NhanVien">Thêm nhân viên</button>

                </div>
            </form>
        </div>
        @* -- *@
        @* --popup Edit Employee *@

        <div class="form-popupEdit mb-2" id="myFormEdit">
            <form class="form-container" method="post" enctype="multipart/form-data">
                <h1 style="font-family:Roboto;">Sửa nhân viên</h1>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Mã Nhân Viên</label>
                            <input class="form-control manvEdit" name="MaNhanVien" readonly />
                        </div>
                        <div class="form-group">
                            <label>Tên Nhân Viên</label>
                            <input class="form-control tennvEdit" name="TenNhanVien" />
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input class="form-control emailEdit" name="Email" />
                        </div>
                        <div class="form-group">
                            <label>Địa chỉ</label>
                            <input class="form-control diaChiEdit" name="DiaChi" />
                        </div>
                        <div class="form-group">
                            <label>Tên đăng nhập</label>
                            <input class="form-control tenDangNhapEdit" name="TenDangNhap" />
                        </div>

                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Số điện thoại</label>
                            <input class="form-control soDienThoaiEdit" name="SoDienThoai" />
                        </div>
                        <div class="form-group">
                            <label>CCCD</label>
                            <input class="form-control cccdEdit" name="CCCD" />
                        </div>
                        <div class="form-group">
                            <label>Giới tính</label>
                            <select class="form-control gioiTinhEdit" name="GioiTinh">
                                <option value="Nam">
                                    Nam
                                </option>
                                <option value="Nữ">
                                    Nữ
                                </option>
                            </select>

                        </div>
                        <div class="form-group">
                            <label>Chức vụ</label>
                            <select class="form-control chucVuEdit" name="ChucVu">
                                <option value="Nhân viên">
                                    Nhân viên
                                </option>
                                <option value="Quản lý">
                                    Quản lý
                                </option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Mật khẩu</label>
                            <input class="form-control matKhauEdit" name="MatKhau" />
                        </div>

                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Ngày sinh</label>
                            <input class="form-control ngaySinhEdit" type="date" name="NgaySinh" />
                        </div>
                        <div class="form-group">
                            <label>Ngày đăng ký</label>
                            <input class="form-control ngayDangKyEdit" type="date" name="NgayDangKy" />
                        </div>
                        <div class="form-group">
                            <label>Ngày vào làm</label>
                            <input class="form-control ngayVaoLamEdit" type="date" name="NgayVaoLam" />
                        </div>

                        <div class="form-group">
                            <label>Tình trạng</label>
                            <input class="form-control tinhTrangEdit" name="TinhTrang" />
                        </div>
                        <div class="form-group">

                            <label for="formFile" class="form-label">Ảnh nhân viên</label>
                            <input type="file" id="formFile" name="anhnhanvien">

                        </div>
                    </div>
                </div>

                @* --- *@
                <div class="clearfix">
                    <button type="button" class="btn float-right m-2 w-25  cancel " onclick="CloseFormEdit()">Đóng</button>
                    <button type="submit" class="btn float-right m-2 w-25 " style="min-width:200px" asp-action="SuaNhanVien" asp-controller="NhanVien">Sửa nhân viên</button>

                </div>
            </form>
        </div>
        @* -- *@
        <a class="btn btn-primary" id="btn_themNv" onclick="openForm()">Thêm nhân viên</a>
        <form method="post" enctype="multipart/form-data" asp-controller="NhanVien" asp-action="Import">
            <div class="form-group">
                <div class="col-md-10">
                    <p>Upload one or more files using this form:</p>
                    <input type="file" name="formFile" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Upload" />
                </div>
            </div>
        </form>

        <a class="btn btn-success" id="btn_export" asp-controller="NhanVien" asp-action="ExportExcel">Export to Excel</a>

        <div id="detailNhanVien">
            <table class="table" id="table_detail" style="border:1px solid #343A40">

                <thead class="thead-dark">
                    <tr>
                        <th scope="col" class="align-middle text-center">
                            <input type="checkbox" id="thead_checkbox" />
                        </th>
                        <th scope="col" class="align-middle text-center"> #</th>
                        <th scope="col" class="align-middle text-center thead_nhanvien">Nhân Viên</th>
                        <th scope="col" class="align-middle text-center thead_email">Email</th>
                        <th scope="col" class="align-middle text-center thead_diachi">Địa Chỉ</th>
                        <th scope="col" class="align-middle text-center thead_sdt">Số Điện Thoại</th>
                        <th scope="col" class="align-middle text-center thead_cccd">CCCD</th>
                        <th scope="col" class="align-middle text-center thead_gioitinh">Giới Tính</th>
                        <th scope="col" class="align-middle text-center thead_ngaysinh">Ngày Sinh</th>
                        <th scope="col" class="align-middle text-center thead_chucvu">Chức Vụ</th>
                        <th scope="col" class="align-middle text-center thead_ngayvaolam">Ngày Vào Làm</th>
                        <th scope="col" class="align-middle text-center thead_tendangnhap">Tên đăng nhập</th>
                        <th scope="col" class="align-middle text-center thead_matkhau">Mật khẩu</th>
                        <th scope="col" class="align-middle text-center thead_tinhtrang">Tình trạng</th>
                        <th scope="col" class="align-middle text-center thead_xuly">Xử lý</th>
                    </tr>
                </thead>

                <form name="main">
                <tbody>
                        @{
                            int stt = 0;
                        }
                        @foreach (var nv in Model)
                        {
                            stt = stt + 1;
                        <tr data-ma-nv="@nv.MaNhanVien" data-ten-nv="@nv.TenNhanVien" data-email="@nv.Email" data-dia-chi="@nv.DiaChi" data-so-dien-thoai="@nv.SoDienThoai" data-cccd="@nv.CCCD" data-gioi-tinh="@nv.GioiTinh" data-ngay-sinh="@nv.NgaySinh.ToShortDateString()" data-ngay-dang-ky="@nv.NgayDangKy.ToShortDateString()" data-chuc-vu="@nv.ChucVu" data-ngay-vao-lam="@nv.NgayVaoLam.ToShortDateString()" data-tendangnhap="@nv.TenDangNhap" data-matkhau="@nv.MatKhau" data-tinhtrang="@nv.TinhTrang">
                            <td style="position:relative;top:12px"><input type="checkbox" name="checkBox_Name" class="tbody_checkbox" onclick="KiemTraCheckBox()" /></td>
                            <td class="employee-info-column">
                                    @stt
                            </td>
                            <td class="employee-column align-middle d-flex flex-column flex-sm-row justify-content-start">
                                <div class="row">
                                    <div class="col-12 col-sm-4">
                                        <img src="~/@nv.AnhNhanVienBase64" alt="Employee Image" class="employee-image">
                                    </div>
                                    <div class="col-12 col-sm-8">
                                        <span class="d-block d-sm-inline text-warning">- @nv.MaNhanVien</span>
                                        <br>
                                        <p class="d-block d-sm-inline">@nv.TenNhanVien</p>
                                    </div>
                                </div>
                            </td>
                            <td class="employee-info-column align-top">@nv.Email</td>
                            <td class="employee-info-column tbody_diachi">@nv.DiaChi</td>
                            <td class="employee-info-column tbody_sdt">@nv.SoDienThoai</td>
                            <td class="employee-info-column tbody_cccd">@nv.CCCD</td>
                            <td class="employee-info-column tbody_gioitinh">@nv.GioiTinh</td>
                            <td class="employee-info-column tbody_ngaysinh">@nv.NgaySinh.ToShortDateString()</td>
                            <td class="employee-info-column tbody_chucvu">@nv.ChucVu</td>
                            <td class="employee-info-column tbody_ngayvaolam">@nv.NgayVaoLam.ToShortDateString()</td>
                            <td class="employee-info-column tbody_tendangnhap">@nv.TenDangNhap</td>
                            <td class="employee-info-column tbody_matkhau">@nv.MatKhau</td>
                            <td class="employee-info-column " id="tbody_tinhtrang">@nv.TinhTrang</td>

                            <td style="font-size:20px" class="employee-info-column-button">
                                <div class="dropdown">
                                    <button class="btn btn-secondary check_checkbox_checked" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="bi bi-three-dots-vertical icon_threeDot"></i>
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item check_checkbox" onclick="OpenFormEdit()" id="btn_Sua">Sửa</a>
                                        <a class="dropdown-item" asp-action="XoaNhanVien" asp-controller="NhanVien" asp-route-id="@nv.MaNhanVien">Xóa</a>
                                    </div>
                                </div>
                            </td>
                        </tr>

                        }
                </tbody>
                </form>
            </table>

        </div>

        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
                integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
                crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
                integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
                crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
                integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
                crossorigin="anonymous"></script>
        <script src="~/JsNhanVien/index.js"></script>
        <script src="~/Folder_KiemLoiInput/ErrorNhanVien.js"></script>

        <script>
            function previewImage() {
                var input = document.getElementById('formFile');
                var preview = document.getElementById('preview');

                // Kiểm tra xem có file nào được chọn hay không
                if (input.files && input.files[0]) {
                    var reader = new FileReader();

                    // Đọc đường dẫn của file và hiển thị ảnh
                    reader.onload = function (e) {
                        preview.src = e.target.result;
                    }

                    reader.readAsDataURL(input.files[0]);
                }
            }
        </script>
    </body>
    </html>
}
else
{
    Layout = null;
    <img src="https://images.viblo.asia/11ff00f7-7905-4b7f-8f06-2a65eda7456b.png" id="Image_notfound" />
