    </head>
    <body>
        @* -- popup -addEmployee *@



        <section>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Tổng quan</a></li>
                <li class="breadcrumb-item active" aria-current="page">Danh sách nhân viên</li>
            </ol>
        </section>

        <!-- The form -->
        <div class="form-popup mb-2" id="myForm">
            <form class="form-container" method="post" enctype="multipart/form-data">
                <h1 style="font-family:Roboto;">Thêm nhân viên</h1>
                @* ---popup_Addnhanvien *@
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Mã Nhân Viên</label>
                            <input class="form-control" name="manhanvien" id="inputFieldMaNV" maxlength="6" />
                            <span id="errorMaNV" style="color: red;"></span>
                        </div>
                        <div class="form-group">
                            <label>Tên Nhân Viên</label>
                            <input class="form-control" name="tennhanvien" id="inputFieldTenNV" />
                            <span id="errorTenNV" style="color: red;"></span>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input class="form-control" name="email" id="inputFieldEmail" />
                            <span id="errorEmail" style="color: red;"></span>
                        </div>
                        <div class="form-group">
                            <label>Địa chỉ</label>
                            <input class="form-control" name="diachi" id="inputFieldDiaChi" maxlength="50" />
                            <span id="errorDiaChi" style="color: red;"></span>
                        </div>
                        <div class="form-group">
                            <label>Tên đăng nhập</label>
                            <input class="form-control" name="tendangnhap" id="inputFieldTenDangNhap" maxlength="30" />
