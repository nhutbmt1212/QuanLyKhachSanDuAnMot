@{
    Layout = null;

}
<!DOCTYPE html>
<html lang="en">

<head>
    <title>Đăng ký</title>
    <link rel="stylesheet" href="~/css/CssDangKy.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <form method="post" asp-action="DangKyTaikhoan" asp-controller="Access">
    <div class="form-box">
      
        @* <img src="~/UploadImage/Screenshot_2_preview_rev_1.png" alt=""> *@
        <h2>ĐĂNG KÝ</h2>
        <div class="input-box">
            <i class='bx bxs-user'></i>
            <input type="text" name="TenKhachHang" required>
            <label for="">Tên khách hàng</label>
        </div>
        <div class="input-box">
            <i class='bx bxs-envelope'></i>
            <input type="text" name="Email" required>
            <label for="">Email/Số điện thoại</label>
        </div>
        <div class="input-box">
            <i class='bx bxs-lock-alt'></i>
            <input type="password" name="MatKhau" required>
            <label for="">Mật khẩu</label>
        </div>
        <div class="input-box">
            <i class='bx bxs-lock-alt'></i>
            <input type="password" name="cPassword" required>
            <label for="">Nhập lại mật khẩu</label>
            </div>
        <button class="btn btn-outline-success" style="padding:12px 20px 20px 20px;" >Đăng ký</button>
        <div class="register">
            <p>Bạn đã có tài khoản? <a asp-action="Login" asp-controller="Access">Đăng nhập</a></p>
        </div>
        
    </div>
    </form>
</body>

</html>