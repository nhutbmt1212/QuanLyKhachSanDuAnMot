@using System.Security.Claims;
@{
    var userRole = User.FindFirst(ClaimTypes.Role)?.Value;

}
@model List<QuanLyKhachSan.Models.Phong>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
          crossorigin="anonymous">
    <link rel="stylesheet" href="~/CssPhong/CssPhong.css" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

    <style>
        .container-with-border {
            border: 2px solid #000;
            padding: 10px;
            position: relative;
        }

        .table-container {
            max-height: 300px;
            overflow: auto;
        }

        .table th,
        .table td {
            padding: 8px; /* Khoảng cách giữa nội dung và viền của mỗi ô */
        }

        .table th {
            font-size: 14px; /* Kích thước chữ của tiêu đề */
        }

        .table td {
            font-size: 12px; /* Kích thước chữ của nội dung */
        }

        .room-column {
            display: flex;
            align-items: center;
        }

        .room-image {
            width: 40px; /* Đặt kích thước của ảnh */
            height: 40px; /* Đặt kích thước của ảnh */
            border-radius: 50%; /* Tạo hình tròn cho ảnh */
            margin-right: 10px; /* Khoảng cách giữa ảnh và thông tin phòng */
            margin-left: 8px;
        }

        .room-info {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .room-info span {
                text-align: center;
            }

                .room-info span:first-child {
                    color: orange;
                }

        .table td.room-info-column {
            position: relative;
            top: 25px;
        }

        .table td.room-info-column-button {
            position: relative;
            top: 15px;
        }

        #btn_themPhong {
            margin-bottom: 10px;
            max-width: 180px;
            max-height: 40px;
        }

        .btn_threeDotDropDown {
            border: none;
            background-color: none;
        }

        #dropdownMenuButton {
            background-color: #FFFFFF;
            border: none;
        }

        .icon_threeDot {
            color: black;
            font-size: 18px;
        }

        #preview {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .preview-image {
            max-width: 100px;
            max-height: 100px;
        }

        img {
            width: 100px;
            height: 100px;
            object-fit: cover;
            margin-right: 5px;
        }




        .image-preview-container {
            display: flex;
        }

        .image-container {
            position: relative;
            display: inline-block;
            margin-right: 10px;
        }

        .delete-icon {
            position: absolute;
            top: 0;
            right: 0;
            cursor: pointer;
            background-color: #ff0000;
            color: #fff;
            padding: 2px;
            border-radius: 50%;
            font-size: 12px;
        }

        .img_detail {
            height: 50px;
        }
    </style>
</head>
<body>
    <!-- Popup Thêm Phòng -->
    <div class="form-popup mb-2" id="myForm">
        <form class="form-container" method="post" action="/Phong/LuuAnh" enctype="multipart/form-data">
            <h1 style="font-family:Roboto;">Thêm phòng</h1>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Mã phòng</label>
                        <input class="form-control" name="maphong" id="inputFieldMaP" maxlength="6" />
                        <span id="errorMaP" style="color: red;"></span>
                    </div>
                    <div class="form-group">
                        <label>Tên loại phòng</label>
                        <select class="form-control" name="maloaiphong" id="inputFieldChonLP">
                            <option value="">Chọn loại phòng</option>
                            @foreach (var phong in ViewBag.DanhSachLoaiPhong)
                            {
                                <option value="@phong.MaLoaiPhong">
                                    @phong.MaLoaiPhong - @phong.TenLoaiPhong
                                </option>
                            }
                        </select>
                        <span id="errorChonLP" style="color: red;"></span>
                    </div>

                    <div class="form-group">
                        <label>Ngày tạo</label>
                        <input class="form-control" name="ngaytao" type="datetime-local" id="inputFieldNgayTao" />
                        <span id="errorNgayTao" style="color: red;"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Giá theo giờ</label>
                        <input class="form-control" name="giatheogio" type="number" min="0" />
                    </div>
                    <div class="form-group">
                        <label>Giá theo ngày</label>
                        <input class="form-control" name="giatheongay" type="number" min="0" />
                    </div>
                    <div class="form-group">
                        <label>Phụ thu trả muộn</label>
                        <input class="form-control" name="phuthutramuon" type="number" min="0" />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label>Số lượng người lớn</label>
                        <input class="form-control" name="soluonnguoilon" type="number" min="0" />
                    </div>
                    <div class="form-group">
                        <label>Số lượng trẻ em</label>
                        <input class="form-control" name="soluongtreem" type="number" min="0" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="image-selection">
                            <label for="ImageUrl">Chọn ảnh:</label>
                            <input type="file" id="ImageUrl" name="Imageurl" multiple accept="image/*" />
                        </div>
                        <div class="image-preview-container" id="addImagePreviewContainer"></div>
                    </div>

                </div>
            </div>

            <div class="clearfix">
                <button class="btn align-middle m-2 w-25 btn " style="min-width:200px" type="submit">Thêm phòng</button>
                <button type="button" class="btn align-middle m-2 w-25  cancel" onclick="closeForm()">Đóng</button>
            </div>
        </form>
    </div>
    <!-- Popup Sửa Phòng -->
    <div class="form-popupEdit mb-2" id="myFormEdit">
        <form class="form-container" method="post" enctype="multipart/form-data">
            <h1 style="font-family:Roboto;">Sửa phòng</h1>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Mã phòng</label>
                        <input class="form-control maphongedit" name="maphong" />
                    </div>
                    <div class="form-group">
                        <label>Tên loại phòng</label>
                        <select class="form-control maloaiphongedit" name="maLoaiPhong" id="inputEditChonLP">
                            <option value="">Chọn loại phòng</option>
                            @foreach (var phong in ViewBag.DanhSachPhong)
                            {
                                <option value="@phong.LoaiPhong.MaLoaiPhong">@phong.LoaiPhong.TenLoaiPhong</option>
                            }
                        </select>
                        <span id="errorEditChonLP" style="color: red;"></span>
                    </div>

                    <div class="form-group">
                        <label>Ngày tạo</label>
                        <input class="form-control ngaytaoedit" name="ngaytao" id="inputEditNgayTao" />
                        <span id="errorEditNgayTao" style="color: red;"></span>
                    </div>
                    <div class="form-group">
                        <label>Tình trạng</label>
                        <input class="form-control tinhtrangedit" name="tinhtrang" id="inputEditTinhTrang" />
                        <span id="errorEditTinhTrang" style="color: red;"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="image-selection">
                            <label for="EditImageUrl">Chọn ảnh mới:</label>
                            <input type="file" id="EditImageUrl" name="EditImageurl" multiple accept="image/*" />
                        </div>
                    </div>

                    <div class="image-preview-container" id="editImagePreviewContainer"></div>
                </div>
            </div>
            <div class="clearfix">
                <button type="button" class="btn float-right m-2 w-25  cancel " onclick="CloseFormEdit()">Đóng</button>
                <button type="submit" class="btn float-right m-2 w-25 " style="min-width:200px" id="editButton">Sửa phòng</button>
            </div>
        </form>
    </div>
    <!-- Nút Thêm Phòng -->
    <a class="btn btn-primary" id="btn_themPhong" onclick="openForm()">Thêm phòng</a>
    <!-- Bảng Hiển Thị Danh Sách Phòng -->
    <div>
        <table class="table table-striped table-bordered" id="table_detail" style="border:1px solid #343A40">
            <thead class="thead-dark ">
                <tr>
                    <th scope="col"><input type="checkbox" id="thead_checkbox" /></th>
                    <th scope="col" class="text-center">#</th>
                    <th scope="col">Mã phòng</th>
                    <th scope="col">Tên loại phòng</th>
                    <th scope="col">Ngày tạo</th>
                    <th scope="col">Tình trạng</th>
                    <th scope="col">Ảnh phòng</th>
                    <th scope="col" class="thead_xuly">Xử lý</th>
                </tr>
            </thead>
            <form name="main">
            <tbody>
                    @{
                        int stt = 0;
                    }
                    @foreach (var phong in Model)
                    {
                        stt = stt + 1;
                    <tr data-ma-phong="@phong.MaPhong" data-ma-loai-phong="@phong.MaLoaiPhong" data-ngay-tao="@phong.NgayTao" data-tinh-trang="@phong.TinhTrang">
                        <td style="padding:23px 0px 15px 8px;"><input type="checkbox" name="checkBox_Name" class="align-middle tbody_checkbox" onclick="KiemTraCheckBox()" /></td>
                        <td class="employee-info-column align-middle ">
                                @stt
                        </td>
                        <td class=" align-middle">@phong.MaPhong</td>
                        <td class=" align-middle">@phong.LoaiPhong.TenLoaiPhong</td>
                        <td class=" align-middle">@phong.NgayTao</td>
                        <td class="align-middle">@phong.TinhTrang</td>

                        <td>
                                @if (phong.ImageLinks != null && phong.ImageLinks.Any())
                                {
                                <img src="~/UploadImage/@phong.ImageLinks.First().Url" alt="First Image" class="img_detail" />
                                }
                                else
                                {
                                <p>No images available</p>
                                }
                        </td>
                        <td style="font-size:20px" class="employee-info-column-button">
                            <div class="dropdown">
                                <button class="btn btn-secondary check_checkbox_checked" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="bi bi-three-dots-vertical icon_threeDot"></i>
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item check_checkbox" onclick="OpenFormEdit()" id="btn_Sua">Sửa</a>
                                        @if (User.Identity.IsAuthenticated && userRole == "Quản lý")
                                        {
                                        <a class="dropdown-item" asp-action="XoaNhanVien" asp-controller="NhanVien" asp-route-id="@phong.MaLoaiPhong">Xóa</a>

                                        }
                                </div>
                            </div>
                        </td>
                    </tr>
                    }
            </tbody>
            </form>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
            integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
            crossorigin="anonymous"></script>
    <script src="~/JsPhong/jsPhong.js"></script>
    <script src="~/Folder_KiemLoiInput/ErrorPhong.js"></script>
</body>


</html>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function showSwalToast(icon, title) {
        const Toast = Swal.mixin({
            toast: true,
            position: "top-end",
            showConfirmButton: false,
            timer: 1500,
            timerProgressBar: true,
            didOpen: (toast) => {
                toast.onmouseenter = Swal.stopTimer;
                toast.onmouseleave = Swal.resumeTimer;
            }
        });

        Toast.fire({
            icon: icon,
            title: title
        });
    }
    var swalIcon = '@TempData["SwalIcon"]';
    var swalTitle = '@TempData["SwalTitle"]';

    if (swalIcon && swalTitle) {
        showSwalToast(swalIcon, swalTitle);
    }
</script>
