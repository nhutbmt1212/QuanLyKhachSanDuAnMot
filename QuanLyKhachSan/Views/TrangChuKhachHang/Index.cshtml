        <div class="sreach-room">
            <div class="address row">
                <div class="col-md-2 mb-3 mx-auto">
                    <label for="validationDefaultUsername">Bạn muốn đi đâu?</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroupPrepend2"><i class="bi bi-geo-alt-fill"></i></span>
                        </div>
                        <input type="text" class="form-control" id="validationDefaultUsername" aria-describedby="inputGroupPrepend2" required>
                    </div>
                </div>

                <div class="col-md-2 mb-3 mx-auto">
                    <label for="ngaynhan">Ngày nhận </label>
                    <div class="input-group date" id="ngaynhanPicker" data-target-input="nearest">
                        <input type="datetime-local" class="form-control datetimepicker-input" data-target="#ngaynhanPicker" />
                    </div>
                </div>

                <div class="col-md-2 mb-3 mx-auto">
                    <label for="ngaytra"> Ngày trả</label>
                    <div class="input-group date" id="ngaytraPicker" data-target-input="nearest">
                        <input type="datetime-local" class="form-control datetimepicker-input" data-target="#ngaytraPicker" />
                    </div>
                </div>

                <div class="col-md-2 mb-3 so-phong mx-auto">
                    <label for="sophong">Số lượng</label>
                    <select class="form-select" id="sophong" required>
                        <option value="1">1 người</option>
                        <option value="2">2 người</option>
                        <option value="3">3 người</option>
                    </select>
                </div>

                <div class="col-md-2 Tim-kiem text-md-end">
                    <a class="btn btn-warning">Tìm kiếm phòng</a>
                </div>
            </div>
        </div>






        <div id="infor-hotel">
            <div class="img-hotel">
                <img src="https://images.bubbleup.com/width1920/quality35/mville2017/1-brand/1-margaritaville.com/gallery-media/220803-compasshotel-medford-pool-73868-1677873697.jpg" width="300" height="300" />
            </div>
            <div class="content-infor-hotel">
                <h2>Muong Thanh Grand Da Nang</h2>
